{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1 class='text-3xl font-bold text-center'>Inscription</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm, {'attr' :{'class':'flex flex-col gap-4 w-[400px] shadow-xl p-5 m-auto'}}) }}
        {{ form_row(registrationForm.email, {'attr': {'class':'input input-primary w-fully'}}) }}
        {{ form_row(registrationForm.plainPassword, {
            'attr':{'class' : 'input input-primary w-fully'},
            'label': 'Mot de passe', 'label_attr': {'class': 'text-red-500 label'}
        }) }}
        {{ form_row(registrationForm.pseudo, {'attr': {'class':'input input-primary w-fully'}}) }}

        <button type="submit" class="btn btn-primary">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
